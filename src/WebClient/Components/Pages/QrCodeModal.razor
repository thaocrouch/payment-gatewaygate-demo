<div class="modal fade show" id="exampleModalLive" tabindex="-1" aria-labelledby="exampleModalLiveLabel"
     aria-modal="true" role="dialog" style="display: block;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLiveLabel">Invoice @transaction.Id</h5>
            </div>
            <div class="modal-body">
                <img src="@transaction.QrCode"/>
                <div>Just QRCode fake, click button below for user case.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" @onclick="Close">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Pay">Payment Now</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public CreateOrderResponse transaction { get; set; }

    [Parameter] public EventCallback closeModal { get; set; }

    [Parameter] public EventCallback payNow { get; set; }

    [Parameter] public bool isProcessing { get; set; }

    public async Task Close()
    {
        if (!isProcessing)
            await closeModal.InvokeAsync();
    }

    public async Task Pay()
    {
        if (!isProcessing)
            await payNow.InvokeAsync();
    }

}